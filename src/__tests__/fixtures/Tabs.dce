<script>
  // Props
  let {
    tabs = [],
    defaultTab = 0,
    orientation = 'horizontal',
    onTabChange = null
  } = $props();

  // State
  let activeTab = $state(defaultTab);
  let tabHistory = $state([defaultTab]);

  // Derived
  let currentTab = $derived(tabs[activeTab] || null);
  let isVertical = $derived(orientation === 'vertical');
  let tabsClass = $derived('tabs ' + (isVertical ? 'vertical' : 'horizontal'));
  let visitedTabs = $derived(new Set(tabHistory));

  let tabsWithClass = $derived(
    tabs.map((tab, index) => ({
      ...tab,
      buttonClass: 'tab' + (activeTab === index ? ' active' : '')
    }))
  );

  // Effects
  $effect(() => {
    if (currentTab) {
      console.log('Active tab:', currentTab.label);
    }
  });

  // Functions
  function selectTab(index) {
    if (index !== activeTab && index >= 0 && index < tabs.length) {
      activeTab = index;
      tabHistory = [...tabHistory, index];

      if (onTabChange) {
        onTabChange(index, tabs[index]);
      }
    }
  }

  function nextTab() {
    selectTab((activeTab + 1) % tabs.length);
  }

  function prevTab() {
    selectTab((activeTab - 1 + tabs.length) % tabs.length);
  }

  function handleKeyDown(event, index) {
    if (event.key === 'ArrowRight' && !isVertical) {
      nextTab();
    } else if (event.key === 'ArrowLeft' && !isVertical) {
      prevTab();
    } else if (event.key === 'ArrowDown' && isVertical) {
      nextTab();
    } else if (event.key === 'ArrowUp' && isVertical) {
      prevTab();
    }
  }
</script>

<template>
  <div class={tabsClass}>
    <div class="tabs-list" role="tablist">
      {#each tabsWithClass as tab, index}
        <button
          class={tab.buttonClass}
          role="tab"
          aria-selected={activeTab === index}
          on:click={() => selectTab(index)}
          on:keydown={(e) => handleKeyDown(e, index)}
        >
          {tab.label}
        </button>
      {/each}
    </div>

    <div class="tabs-content">
      {#if currentTab}
        <div class="tab-panel" role="tabpanel">
          {currentTab.content}
        </div>
      {/if}
    </div>
  </div>
</template>

