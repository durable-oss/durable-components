    margin-bottom: 0.25rem;
  }

  .alert-message {
    font-size: 0.875rem;
    line-height: 1.5;
  }

  .alert-dismiss {
    background: transparent;
    border: none;
    font-size: 1.25rem;
    cursor: pointer;
    padding: 0;
    width: 1.5rem;
    height: 1.5rem;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 0.25rem;
    transition: background 0.2s;
    flex-shrink: 0;
  }

  /* Info variant */
  .alert-info {
    background: #eff6ff;
    border-color: #bfdbfe;
    color: #1e40af;
  }

  .alert-info .alert-icon {
    color: #3b82f6;
  }

  .alert-info .alert-dismiss:hover {
    background: #dbeafe;
  }

  /* Success variant */
  .alert-success {
    background: #f0fdf4;
    border-color: #bbf7d0;
    color: #166534;
  }

  .alert-success .alert-icon {
    color: #22c55e;
  }

  .alert-success .alert-dismiss:hover {
    background: #dcfce7;
  }

  /* Warning variant */
  .alert-warning {
    background: #fffbeb;
    border-color: #fde68a;
    color: #92400e;
  }

  .alert-warning .alert-icon {
    color: #f59e0b;
  }

  .alert-warning .alert-dismiss:hover {
    background: #fef3c7;
