  }

  .alert-error .alert-icon {
    color: #ef4444;
  }

  .alert-error .alert-dismiss:hover {
    background: #fee2e2;
  }

  @keyframes slideIn {
    from {
      transform: translateY(-10px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  @keyframes slideOut {
    from {
      transform: translateY(0);
      opacity: 1;
    }
    to {
      transform: translateY(-10px);
      opacity: 0;
    }
  }
</style>
