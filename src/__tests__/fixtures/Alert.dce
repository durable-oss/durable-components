<script>
  // Props
  let {
    variant = 'info',
    title = '',
    message = '',
    dismissible = false,
    icon = true,
    onDismiss = null
  } = $props();

  // State
  let isVisible = $state(true);
  let isDismissing = $state(false);

  // Derived
  let alertClass = $derived(
    'alert alert-' + variant + (isDismissing ? ' dismissing' : '')
  );

  let iconSymbol = $derived(
    variant === 'success' ? '✓' :
    variant === 'error' ? '✕' :
    variant === 'warning' ? '⚠' :
    'ℹ'
  );

  // Functions
  function dismiss() {
    isDismissing = true;
    setTimeout(() => {
      isVisible = false;
      if (onDismiss) {
        onDismiss();
      }
    }, 200);
  }
</script>

<template>
  {#if isVisible}
    <div class={alertClass} role="alert">
      {#if icon}
        <div class="alert-icon">
          {iconSymbol}
        </div>
      {/if}

      <div class="alert-content">
        {#if title}
          <div class="alert-title">{title}</div>
        {/if}
        {#if message}
          <div class="alert-message">{message}</div>
        {:else}
          <div class="alert-message">
            <slot></slot>
          </div>
        {/if}
      </div>

      {#if dismissible}
        <button class="alert-dismiss" on:click={dismiss} aria-label="Dismiss">
          ✕
        </button>
      {/if}
    </div>
  {/if}
</template>

<style>
  .alert {
    display: flex;
    gap: 0.75rem;
    padding: 1rem;
    border-radius: 0.5rem;
    border: 1px solid;
    position: relative;
    animation: slideIn 0.2s ease-out;
  }

  .alert.dismissing {
    animation: slideOut 0.2s ease-in;
  }

  .alert-icon {
    font-size: 1.25rem;
    font-weight: bold;
    flex-shrink: 0;
    width: 1.5rem;
    height: 1.5rem;
