<script>
  // Props
  let {
    open = false,
    title = '',
    description = '',
    showClose = true,
    onClose = null,
    onOpenChange = null
  } = $props();

  // State
  let isOpen = $state(open);
  let isAnimating = $state(false);

  // Derived
  let dialogClass = $derived(
    'dialog' +
    (isOpen ? ' open' : '') +
    (isAnimating ? ' animating' : '')
  );

  // Effects
  $effect(() => {
    if (isOpen !== open) {
      isOpen = open;
    }
  });

  $effect(() => {
    if (isOpen) {
      document.body.style.overflow = 'hidden';
    } else {
      document.body.style.overflow = '';
    }
  });

  // Functions
  function close() {
    isAnimating = true;
    setTimeout(() => {
      isOpen = false;
      isAnimating = false;
      if (onClose) {
        onClose();
      }
      if (onOpenChange) {
        onOpenChange(false);
      }
    }, 200);
  }

  function handleOverlayClick(event) {
    if (event.target.classList.contains('dialog-overlay')) {
      close();
    }
  }

  function handleEscape(event) {
    if (event.key === 'Escape' && isOpen) {
      close();
    }
  }
</script>

<template>
  {#if isOpen}
    <div class="dialog-overlay" on:click={handleOverlayClick}>
      <div class={dialogClass} role="dialog" aria-modal="true">
        <div class="dialog-header">
          {#if title}
            <h2 class="dialog-title">{title}</h2>
          {/if}
          {#if description}
            <p class="dialog-description">{description}</p>
          {/if}
          {#if showClose}
            <button class="dialog-close" on:click={close} aria-label="Close">
              Ã—
            </button>
          {/if}
        </div>

        <div class="dialog-content">
          <slot></slot>
        </div>

        <div class="dialog-footer">
          <slot name="footer"></slot>
        </div>
      </div>
    </div>
  {/if}
</template>

