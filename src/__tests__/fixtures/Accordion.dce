<script>
  // Props
  let {
    items = [],
    allowMultiple = false,
    defaultOpen = []
  } = $props();

  // State
  let openItems = $state(defaultOpen);

  // Derived
  let itemsWithState = $derived(
    items.map((item, index) => {
      const isOpen = openItems.includes(index);
      return {
        ...item,
        isOpen,
        itemClass: 'accordion-item' + (isOpen ? ' open' : ''),
        iconClass: 'accordion-icon' + (isOpen ? ' rotated' : '')
      };
    })
  );

  // Effects
  $effect(() => {
    console.log('Open items:', openItems);
  });

  // Functions
  function toggleItem(index) {
    if (openItems.includes(index)) {
      openItems = openItems.filter(i => i !== index);
    } else {
      if (allowMultiple) {
        openItems = [...openItems, index];
      } else {
        openItems = [index];
      }
    }
  }

  function isItemOpen(index) {
    return openItems.includes(index);
  }
</script>

<template>
  <div class="accordion">
    {#each itemsWithState as item, index}
      <div class={item.itemClass}>
        <button
          class="accordion-trigger"
          on:click={() => toggleItem(index)}
          aria-expanded={item.isOpen}
        >
          <span class="accordion-title">{item.title}</span>
          <span class={item.iconClass}>
            â–¼
          </span>
        </button>

        {#if item.isOpen}
          <div class="accordion-content">
            <div class="accordion-content-inner">
              {item.content}
            </div>
          </div>
        {/if}
      </div>
    {/each}
  </div>
</template>

