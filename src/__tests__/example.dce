<script>
  let { initialCount = 0 } = $props();
  let count = $state(initialCount);
  let doubled = $derived(count * 2);

  function increment() {
    count++;
  }

  $effect(() => {
    console.log('Count changed to:', count);
  });
</script>

<template>
  <div class="counter">
    <button on:click={increment}>
      Count: {count}
    </button>
    <p>Doubled: {doubled}</p>
  </div>
</template>

<style>
  .counter {
    padding: 1rem;
    border-radius: 4px;
    background: #f0f0f0;
  }

  button {
    padding: 0.5rem 1rem;
    background: #007bff;
    color: white;
    border: none;
    border-radius: 4px;
    cursor: pointer;
  }

  button:hover {
    background: #0056b3;
  }
</style>
