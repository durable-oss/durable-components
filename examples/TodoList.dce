<script>
  let items = $state(['Learn Durable Components', 'Build amazing apps', 'Ship to production']);
  let newItem = $state('');

  function addItem() {
    items = [...items, newItem];
    newItem = '';
  }

  function removeItem(index) {
    items = items.filter((_, i) => i !== index);
  }
</script>

<template>
  <div class="todo-list">
    <h2>Todo List</h2>

    <div class="input-group">
      <input
        bind:value={newItem}
        placeholder="Enter a new todo..."
      />
      <button on:click={addItem}>Add</button>
    </div>

    {#if items.length > 0}
      <ul>
        {#each items as item, index}
          <li>
            <span>{item}</span>
            <button on:click={() => removeItem(index)}>Ã—</button>
          </li>
        {/each}
      </ul>
    {:else}
      <p class="empty">No todos yet! Add one above.</p>
    {/if}
  </div>
</template>

